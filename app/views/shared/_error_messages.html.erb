<% if @account.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Oops, <%= pluralize(@account.errors.count, "error") %>.
    </div>
    <ul>
    <% @account.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>